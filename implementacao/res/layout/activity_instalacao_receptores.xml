<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:orientation="vertical"
	        android:scrollbarStyle="outsideInset"
	        android:scrollbars="vertical" >

            <TextView
                android:id="@+id/txtTipoImovel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblTipoDoImovel" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            
            <RadioButton
                android:id="@+id/rbApto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblApartamento" />

            <RadioButton
                android:id="@+id/rbCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCasa" />

		</RadioGroup>

        <TextView
            android:id="@+id/txtEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblEndereco" />

        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/txtNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblNumero" />

        <EditText
            android:id="@+id/edtNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtAptoCasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblAptoCasa" />

        <EditText
            android:id="@+id/edtAptoCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtComplemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblComplemento" />

        <EditText
            android:id="@+id/edtComplemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtBairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblBairro" />

        <EditText
            android:id="@+id/edtBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtNomeDoCondominio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblNomeDoCondominio" />

        <EditText
            android:id="@+id/edtNomeDoCondominio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtNomeDoEdificio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblNomeDoEdificio" />

        <EditText
            android:id="@+id/edtNomeDoEdificio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblCidade" />

        <EditText
            android:id="@+id/edtCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtUF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblUF" />

        <EditText
            android:id="@+id/edtUF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtCEP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblCEP" />

        <EditText
            android:id="@+id/edtCEP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"                
            android:hint="@string/lblMascaraCEP"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtPontoReferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblPontoDeReferencia" />

        <EditText
            android:id="@+id/edtPontoReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/txtNomeResponsavelAtendimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblNomeDoResponsavelPeloAtendimentoAoInstalado" />

        <EditText
            android:id="@+id/edtNomeResponsavelAtendimentoInstalador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
        <TextView
            android:id="@+id/txtReceptores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblReceptores"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/txtReceptorPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblPrincipal" />
        
       <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="bottom|center" >

           <CheckBox
               android:id="@+id/chkPrincipalSKY"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblSKY"
               android:textSize="12dp" />

           <CheckBox
               android:id="@+id/chkPrincipalHD"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblHD"
               android:textSize="12dp" />
           <CheckBox
               android:id="@+id/chkPrincipalFullHD"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblFullHD"
               android:textSize="12dp" />
           <CheckBox
               android:id="@+id/chkPrincipalHDCanaisAbertos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblHDCanaisAbertos"
               android:textSize="12dp" />
     	</LinearLayout>
       
        <TextView
            android:id="@+id/txtReceptorOpcional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblOpcional" />
        
       <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="bottom|center" >

           <CheckBox
               android:id="@+id/chkOpcionalSKY"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblSKY"
               android:textSize="12dp" />

           <CheckBox
               android:id="@+id/chkOpcionalHD"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblHD"
               android:textSize="12dp" />
           <CheckBox
               android:id="@+id/chkOpcionalFullHD"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblFullHD"
               android:textSize="12dp" />
           <CheckBox
               android:id="@+id/chkOpcionalHDCanaisAbertos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblHDCanaisAbertos"
               android:textSize="12dp" />
     	</LinearLayout>
     	    
        <TextView
            android:id="@+id/txtReceptorBandaLarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblBandaLarga" />
        
       <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="bottom|center" >

           <CheckBox
               android:id="@+id/chkBandaLargaSKY"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblSKY"
               android:textSize="12dp" />

           <CheckBox
               android:id="@+id/chkBandaLargaHD"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblHD"
               android:textSize="12dp" />
           <CheckBox
               android:id="@+id/chkBandaLargaFullHD"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblFullHD"
               android:textSize="12dp" />
           <CheckBox
               android:id="@+id/chkBandaLargaHDCanaisAbertos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lblHDCanaisAbertos"
               android:textSize="12dp" />
     	</LinearLayout>
       	<View      
			    android:id="@+id/Divisor1"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#A8A8A8" />
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="bottom|center" >

	            <ImageButton
	                android:id="@+id/btnVoltar3"
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:layout_gravity="start"
	                android:src="@drawable/ic_voltar" />
	
	            <ImageButton
	                android:id="@+id/btnAvancar3"
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:layout_gravity="end"
	                android:src="@drawable/ic_avancar" />
        	</LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>